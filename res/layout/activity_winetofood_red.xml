<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:screenOrientation="portrait"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foodtowine"
    tools:context=".FoodtoWine" >

    <EditText
        android:id="@+id/Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="122dp"
        android:background="@color/Tan"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:inputType="textMultiLine|textNoSuggestions"
        android:textAlignment="center"
        android:textColor="@color/maroon"
        android:textColorLink="@color/maroon"
        android:textStyle="italic"
        android:typeface="serif"
 android:focusable="false" >
    </EditText>

    <Button
        android:id="@+id/buttonPinot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Red"
        android:layout_below="@+id/buttonMerlot"
        android:layout_marginTop="27dp"
        android:background="@color/Tan"
        android:onClick="pickPinot"
        android:text="Pinot Noir"
        android:textColor="@color/maroon"
        android:textColorLink="@color/maroon"
        android:textStyle="italic"
        android:typeface="serif" />

    <Button
        android:id="@+id/RelativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonPinot"
        android:layout_alignBottom="@+id/buttonPinot"
        android:layout_alignRight="@+id/ButtonCab"
        android:background="@color/Tan"
        android:onClick="pickZinfandel"
        android:text="Zinfandel"
        android:textColor="@color/maroon"
        android:textColorLink="@color/maroon"
        android:textStyle="italic"
        android:typeface="serif" />

    <Button
        android:id="@+id/buttonMerlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/Tan"
        android:onClick="pickMerlot"
        android:text="Merlot"
        android:textColor="@color/maroon"
        android:textColorLink="@color/maroon"
        android:textStyle="italic"
        android:typeface="serif" />

    <Button
        android:id="@+id/ButtonCab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonPinot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@color/Tan"
        android:onClick="pickCabernet"
        android:text="Cabernet Sauvignon"
        android:textColor="@color/maroon"
        android:textColorLink="@color/maroon"
        android:textStyle="italic"
        android:typeface="serif" />

</RelativeLayout>
