<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:screenOrientation="portrait"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blank_blackboard"
    tools:context=".UserStats" >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Your Quiz Stats"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/AntiqueWhite" />

    <TextView
        android:id="@+id/scoreTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/answeredDisplay"
        android:layout_below="@+id/name"
        android:layout_marginTop="39dp"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/AntiqueWhite" />

    <TextView
        android:id="@+id/answeredDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/AntiqueWhite" />

    <TextView
        android:id="@+id/questions_answered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answeredDisplay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Questions Completed"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/AntiqueWhite" />

    <TextView
        android:id="@+id/questions_correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoreTotal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="Questions Correct, out of"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/AntiqueWhite" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questions_answered"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:textColor="@color/AntiqueWhite"
        android:onClick="scoreReset"
        android:text="Reset Score" />

</RelativeLayout>